<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:stretchColumns="1" >
       

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewNombre"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:ems="10"
                    android:text="@string/nombre"
                    android:textColor="@color/textLabel" />

                <EditText
                    android:id="@+id/nombre_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/textLabel" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewApellido"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"                    
                    android:ems="10"
                    android:text="@string/apellido"
                    android:textColor="@color/textLabel" />

                <EditText
                    android:id="@+id/apellido_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/textLabel" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:ems="10"
                    android:text="@string/especialidadDinamica"
                    android:textColor="@color/textLabel" />

                <AutoCompleteTextView
                    android:id="@+id/especialidad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:padding="6dip"
                    android:textColor="@color/textLabel" >

                </AutoCompleteTextView>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:ems="10"
                    android:text="@string/sucursal"
                    android:textColor="@color/textLabel" />

                <Spinner
                    android:id="@+id/sucursal"
                    style="@style/customSpinnerStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="47dp"
                    android:entries="@array/sucursal_arrays"
                    android:prompt="@string/sucursal_prompt"
                    android:textColor="@color/textLabel" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:ems="10"
                android:text="@string/dias_atencion"
                android:textColor="@color/textLabel" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/domingo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/domingo"
                android:textColor="@color/textLabel" />

            <CheckBox
                android:id="@+id/lunes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/lunes"
                android:textColor="@color/textLabel" />

            <CheckBox
                android:id="@+id/martes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textLabel"
                android:text="@string/martes" />
            
        </LinearLayout> 

            
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/miercoles"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/miercoles"
                android:textColor="@color/textLabel" />

            <CheckBox
                android:id="@+id/jueves"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/jueves"
                android:textColor="@color/textLabel" />

            <CheckBox
                android:id="@+id/viernes"
                android:layout_width="100dp"
                android:textColor="@color/textLabel"
                android:layout_height="wrap_content"
                android:text="@string/viernes" />
        </LinearLayout> 

            
        </TableRow>
        

        <!-- Header Ends -->

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/sabado"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/sabado"
                android:textColor="@color/textLabel" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient" 
            android:layout_marginTop="20dip">



                <Button
                    android:id="@+id/buttonBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/buscar" />


        </TableRow>

    </TableLayout>

</ScrollView>